{
  "name": "realtime-chat-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "web": "bun turbo run dev --filter=web"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "prettier": "^3.7.4",
    "turbo": "^2.8.12",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
